{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "declaration": false,
        "outDir": "dist",
        "lib": [
            "esnext",
            "es2019",
            "DOM"
        ],
        "esModuleInterop": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "strict": true,
        "resolveJsonModule": true
    },
}
